import SidebarNav from '../components/SidebarNav';

const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';

const navSections = [
  {
    header: 'Create',
    items: [
      { icon: 'chat', label: 'Chat', href: `${baseUrl}chat-prompts/` },
      { icon: 'agent-builder', label: 'Agent Builder', href: `${baseUrl}agent-builder/` },
      { icon: 'audio', label: 'Audio', href: `${baseUrl}audio/` },
      { icon: 'images', label: 'Images', href: `${baseUrl}images/` },
      { icon: 'videos', label: 'Videos', selected: true, href: `${baseUrl}videos/` },
      { icon: 'assistants', label: 'Assistants', href: `${baseUrl}assistants/` },
    ],
  },
  {
    header: 'Manage',
    items: [
      { icon: 'usage', label: 'Usage', href: `${baseUrl}usage/` },
      { icon: 'api-keys', label: 'API keys', href: `${baseUrl}api-keys/` },
      { icon: 'apps', label: 'Apps', href: `${baseUrl}apps/` },
      { icon: 'logs', label: 'Logs', href: `${baseUrl}logs/` },
      { icon: 'storage', label: 'Storage', href: `${baseUrl}storage/` },
      { icon: 'batches', label: 'Batches', href: `${baseUrl}batches/` },
    ],
  },
  {
    header: 'Optimize',
    items: [
      { icon: 'evaluation', label: 'Evaluation', href: `${baseUrl}evaluation/` },
      { icon: 'fine-tuning', label: 'Fine-tuning', href: `${baseUrl}fine-tuning/` },
    ],
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Videos - Create</title>
  </head>
  <body class="bg-white">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <SidebarNav 
        client:load 
        sections={navSections}
      />

      <!-- Main content area -->
      <main class="flex-1 overflow-y-auto">
        <div class="max-w-5xl mx-auto p-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Videos</h1>
          <p class="text-gray-600 mb-8">Upload, manage, and process video files</p>

          <!-- Upload Section -->
          <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 rounded-full bg-purple-50 flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </div>
              <h2 class="text-xl font-semibold text-gray-900">Upload Video</h2>
            </div>
            
            <div class="space-y-4">
              <div class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-purple-400 transition-colors cursor-pointer" id="videoDropZone">
                <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                <p class="text-gray-700 font-medium mb-2">Drop video files here or click to browse</p>
                <p class="text-sm text-gray-500">Supports MP4, MOV, AVI, WebM (Max 500MB)</p>
              </div>
              <input type="file" id="videoFileInput" accept="video/*" class="hidden" />
              
              <div class="flex gap-3">
                <button
                  id="selectVideoButton"
                  class="flex-1 px-6 py-3 bg-purple-600 text-white rounded-lg font-medium hover:bg-purple-700 transition-colors shadow-sm"
                >
                  Select Video File
                </button>
                <button
                  id="recordVideoButton"
                  class="flex-1 px-6 py-3 bg-white border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition-colors shadow-sm"
                >
                  Record from Camera
                </button>
              </div>
            </div>
          </div>

          <!-- Video Library -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
            <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
              <h2 class="text-xl font-semibold text-gray-900">Video Library</h2>
              <div class="flex items-center gap-2">
                <select class="px-3 py-1.5 border border-gray-300 rounded-lg text-sm">
                  <option>All Videos</option>
                  <option>Uploaded</option>
                  <option>Recorded</option>
                  <option>Processing</option>
                </select>
              </div>
            </div>
            <div class="divide-y divide-gray-200" id="videosList">
              <div class="px-6 py-12 text-center text-gray-500">
                No videos yet. Upload a video file or record from your camera to begin.
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Camera Recording Modal -->
    <div id="cameraModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg p-6 max-w-2xl w-full mx-4">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-xl font-semibold text-gray-900">Record Video</h3>
          <button id="closeCameraModal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="space-y-4">
          <div class="bg-black rounded-lg overflow-hidden aspect-video">
            <video id="cameraPreview" class="w-full h-full" autoplay muted></video>
          </div>
          <div class="flex items-center justify-center gap-3">
            <button id="startRecording" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
              <span class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="6" />
                </svg>
                Start Recording
              </span>
            </button>
            <button id="stopRecording" class="hidden px-6 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800">
              Stop Recording
            </button>
            <span id="recordingTimer" class="hidden text-red-600 font-mono text-lg">00:00</span>
          </div>
        </div>
      </div>
    </div>

    <script>
      let videoFiles: { name: string; size: number; url: string; duration?: number; type: string }[] = [];
      let mediaRecorder: MediaRecorder | null = null;
      let recordedChunks: Blob[] = [];
      let cameraStream: MediaStream | null = null;
      let recordingInterval: number | null = null;
      let recordingSeconds = 0;

      const videoFileInput = document.getElementById('videoFileInput') as HTMLInputElement;
      const selectVideoButton = document.getElementById('selectVideoButton');
      const recordVideoButton = document.getElementById('recordVideoButton');
      const videoDropZone = document.getElementById('videoDropZone');
      const videosList = document.getElementById('videosList');
      const cameraModal = document.getElementById('cameraModal');
      const closeCameraModal = document.getElementById('closeCameraModal');
      const cameraPreview = document.getElementById('cameraPreview') as HTMLVideoElement;
      const startRecording = document.getElementById('startRecording');
      const stopRecording = document.getElementById('stopRecording');
      const recordingTimer = document.getElementById('recordingTimer');

      // File upload handlers
      selectVideoButton?.addEventListener('click', () => {
        videoFileInput?.click();
      });

      videoFileInput?.addEventListener('change', (e) => {
        const file = (e.target as HTMLInputElement).files?.[0];
        if (file) {
          handleVideoUpload(file);
        }
      });

      videoDropZone?.addEventListener('click', () => {
        videoFileInput?.click();
      });

      videoDropZone?.addEventListener('dragover', (e) => {
        e.preventDefault();
        videoDropZone.classList.add('border-purple-400', 'bg-purple-50');
      });

      videoDropZone?.addEventListener('dragleave', () => {
        videoDropZone.classList.remove('border-purple-400', 'bg-purple-50');
      });

      videoDropZone?.addEventListener('drop', (e) => {
        e.preventDefault();
        videoDropZone.classList.remove('border-purple-400', 'bg-purple-50');
        
        const file = e.dataTransfer?.files[0];
        if (file && file.type.startsWith('video/')) {
          handleVideoUpload(file);
        }
      });

      function handleVideoUpload(file: File) {
        const url = URL.createObjectURL(file);
        
        // Get video duration
        const video = document.createElement('video');
        video.preload = 'metadata';
        video.src = url;
        video.onloadedmetadata = () => {
          const duration = Math.floor(video.duration);
          addVideoToLibrary(file.name, file.size, url, duration, 'uploaded');
          URL.revokeObjectURL(video.src);
        };
      }

      // Camera recording handlers
      recordVideoButton?.addEventListener('click', async () => {
        try {
          cameraStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
          cameraPreview.srcObject = cameraStream;
          cameraModal?.classList.remove('hidden');
        } catch (err) {
          alert('Error accessing camera. Please ensure you have granted permission.');
          console.error('Error accessing camera:', err);
        }
      });

      closeCameraModal?.addEventListener('click', () => {
        stopCamera();
      });

      startRecording?.addEventListener('click', () => {
        if (!cameraStream) return;

        recordedChunks = [];
        recordingSeconds = 0;
        mediaRecorder = new MediaRecorder(cameraStream, { mimeType: 'video/webm' });

        mediaRecorder.ondataavailable = (event) => {
          if (event.data.size > 0) {
            recordedChunks.push(event.data);
          }
        };

        mediaRecorder.onstop = () => {
          const blob = new Blob(recordedChunks, { type: 'video/webm' });
          const url = URL.createObjectURL(blob);
          addVideoToLibrary(`Recording ${new Date().toLocaleTimeString()}`, blob.size, url, recordingSeconds, 'recorded');
          stopCamera();
        };

        mediaRecorder.start();
        startRecording?.classList.add('hidden');
        stopRecording?.classList.remove('hidden');
        recordingTimer?.classList.remove('hidden');

        recordingInterval = setInterval(() => {
          recordingSeconds++;
          const mins = Math.floor(recordingSeconds / 60);
          const secs = recordingSeconds % 60;
          if (recordingTimer) {
            recordingTimer.textContent = `${String(mins).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
          }
        }, 1000);
      });

      stopRecording?.addEventListener('click', () => {
        if (mediaRecorder && mediaRecorder.state === 'recording') {
          mediaRecorder.stop();
        }
        if (recordingInterval) {
          clearInterval(recordingInterval);
        }
        startRecording?.classList.remove('hidden');
        stopRecording?.classList.add('hidden');
        recordingTimer?.classList.add('hidden');
      });

      function stopCamera() {
        if (cameraStream) {
          cameraStream.getTracks().forEach(track => track.stop());
          cameraStream = null;
        }
        cameraModal?.classList.add('hidden');
        if (cameraPreview) {
          cameraPreview.srcObject = null;
        }
      }

      function addVideoToLibrary(name: string, size: number, url: string, duration: number, type: string) {
        const emptyMessage = videosList?.querySelector('div');
        if (emptyMessage?.textContent?.includes('No videos')) {
          videosList!.innerHTML = '';
        }

        const videoItem = document.createElement('div');
        videoItem.className = 'px-6 py-4 hover:bg-gray-50';
        videoItem.innerHTML = `
          <div class="flex items-start gap-4">
            <div class="relative">
              <video src="${url}" class="w-32 h-20 object-cover rounded-lg bg-gray-100"></video>
              <div class="absolute bottom-1 right-1 bg-black bg-opacity-75 text-white text-xs px-1.5 py-0.5 rounded">
                ${Math.floor(duration / 60)}:${String(duration % 60).padStart(2, '0')}
              </div>
            </div>
            <div class="flex-1">
              <h3 class="font-medium text-gray-900 mb-1">${name}</h3>
              <p class="text-sm text-gray-500 mb-3">
                ${(size / 1024 / 1024).toFixed(2)} MB • ${new Date().toLocaleString()} • ${type}
              </p>
              <div class="flex items-center gap-2">
                <button class="px-3 py-1.5 bg-purple-600 text-white text-sm rounded hover:bg-purple-700 transition-colors" onclick="playVideo('${url}')">
                  Play
                </button>
                <button class="px-3 py-1.5 bg-white border border-gray-300 text-gray-700 text-sm rounded hover:bg-gray-50 transition-colors">
                  Download
                </button>
                <button class="px-3 py-1.5 bg-white border border-gray-300 text-gray-700 text-sm rounded hover:bg-gray-50 transition-colors">
                  Analyze
                </button>
                <button class="ml-auto p-1.5 text-gray-400 hover:text-red-600 transition-colors" onclick="deleteVideo(this)">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        `;
        
        videosList?.prepend(videoItem);
      }

      (window as any).playVideo = (url: string) => {
        const video = document.createElement('video');
        video.src = url;
        video.controls = true;
        video.className = 'w-full rounded-lg';
        
        const modal = document.createElement('div');
        modal.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 p-8';
        modal.innerHTML = `
          <div class="relative max-w-4xl w-full">
            <button onclick="this.parentElement.parentElement.remove()" class="absolute -top-10 right-0 text-white hover:text-gray-300">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        `;
        modal.querySelector('div')?.appendChild(video);
        document.body.appendChild(modal);
        video.play();
      };

      (window as any).deleteVideo = (button: HTMLElement) => {
        if (confirm('Are you sure you want to delete this video?')) {
          button.closest('.px-6')?.remove();
          
          if (videosList && videosList.children.length === 0) {
            videosList.innerHTML = `
              <div class="px-6 py-12 text-center text-gray-500">
                No videos yet. Upload a video file or record from your camera to begin.
              </div>
            `;
          }
        }
      };
    </script>
  </body>
</html>
