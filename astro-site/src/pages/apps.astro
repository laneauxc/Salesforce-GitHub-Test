---
import SidebarNav from '../components/SidebarNav';

const baseUrl = import.meta.env.BASE_URL;

const navSections = [
  {
    header: 'Create',
    items: [
      { icon: 'chat', label: 'Chat', href: `${baseUrl}chat-prompts/` },
      { icon: 'agent-builder', label: 'Agent Builder', href: `${baseUrl}agent-builder/` },
      { icon: 'audio', label: 'Audio', href: `${baseUrl}audio/` },
      { icon: 'images', label: 'Images', href: `${baseUrl}images/` },
      { icon: 'videos', label: 'Videos', href: `${baseUrl}videos/` },
      { icon: 'assistants', label: 'Assistants', href: `${baseUrl}assistants/` },
    ],
  },
  {
    header: 'Manage',
    items: [
      { icon: 'usage', label: 'Usage', href: `${baseUrl}usage/` },
      { icon: 'api-keys', label: 'API keys', href: `${baseUrl}api-keys/` },
      { icon: 'apps', label: 'Apps', selected: true, href: `${baseUrl}apps/` },
      { icon: 'logs', label: 'Logs', href: `${baseUrl}logs/` },
      { icon: 'storage', label: 'Storage', href: `${baseUrl}storage/` },
      { icon: 'batches', label: 'Batches', href: `${baseUrl}batches/` },
    ],
  },
  {
    header: 'Optimize',
    items: [
      { icon: 'evaluation', label: 'Evaluation', href: `${baseUrl}evaluation/` },
      { icon: 'fine-tuning', label: 'Fine-tuning', href: `${baseUrl}fine-tuning/` },
    ],
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apps - Manage</title>
  </head>
  <body class="bg-white">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <SidebarNav 
        client:load 
        sections={navSections}
      />

      <!-- Main content area -->
      <main class="flex-1 overflow-y-auto">
        <div class="max-w-6xl mx-auto p-8">
          <div class="flex items-center justify-between mb-8">
            <div>
              <h1 class="text-3xl font-bold text-gray-900 mb-2">Apps</h1>
              <p class="text-gray-600">Manage your connected applications and integrations</p>
            </div>
            <button id="createAppBtn" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors shadow-sm flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Connect App
            </button>
          </div>

          <!-- App Categories -->
          <div class="flex gap-2 mb-6">
            <button class="px-4 py-2 bg-blue-100 text-blue-700 rounded-lg font-medium text-sm">All Apps</button>
            <button class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-lg font-medium text-sm hover:bg-gray-50">Connected</button>
            <button class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-lg font-medium text-sm hover:bg-gray-50">Available</button>
          </div>

          <!-- Connected Apps -->
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Connected Apps</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="connectedApps">
              <!-- Slack -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center">
                    <svg class="w-8 h-8 text-purple-600" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zM18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312zM15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full">Connected</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Slack</h3>
                <p class="text-sm text-gray-600 mb-4">Send notifications and updates to Slack channels</p>
                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                  <span class="text-xs text-gray-500">Connected 2 days ago</span>
                  <button class="text-sm text-red-600 hover:text-red-700 font-medium">Disconnect</button>
                </div>
              </div>

              <!-- GitHub -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-gray-900 flex items-center justify-center">
                    <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full">Connected</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">GitHub</h3>
                <p class="text-sm text-gray-600 mb-4">Sync code repositories and manage deployments</p>
                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                  <span class="text-xs text-gray-500">Connected 1 week ago</span>
                  <button class="text-sm text-red-600 hover:text-red-700 font-medium">Disconnect</button>
                </div>
              </div>

              <!-- Zapier -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-orange-100 flex items-center justify-center">
                    <svg class="w-8 h-8 text-orange-600" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm6.14 12.77l-2.96 2.96a.98.98 0 0 1-1.39 0l-2.96-2.96a.98.98 0 0 1 0-1.39l2.96-2.96a.98.98 0 0 1 1.39 0l2.96 2.96a.98.98 0 0 1 0 1.39z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full">Connected</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Zapier</h3>
                <p class="text-sm text-gray-600 mb-4">Automate workflows across 5,000+ apps</p>
                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                  <span class="text-xs text-gray-500">Connected 3 days ago</span>
                  <button class="text-sm text-red-600 hover:text-red-700 font-medium">Disconnect</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Available Apps -->
          <div>
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Available Apps</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <!-- Discord -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-indigo-100 flex items-center justify-center">
                    <svg class="w-8 h-8 text-indigo-600" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">Available</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Discord</h3>
                <p class="text-sm text-gray-600 mb-4">Send messages and notifications to Discord servers</p>
                <div class="pt-4 border-t border-gray-200">
                  <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Connect
                  </button>
                </div>
              </div>

              <!-- Notion -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-black flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M4.459 4.208c.746.606 1.026.56 2.428.466l13.215-.793c.28 0 .047-.28-.046-.326L17.86 1.968c-.42-.326-.981-.7-2.055-.607L3.01 2.295c-.466.046-.56.28-.374.466zm.793 3.08v13.904c0 .747.373 1.027 1.214.98l14.523-.84c.841-.046.935-.56.935-1.167V6.354c0-.606-.233-.933-.748-.887l-15.177.887c-.56.047-.747.327-.747.933zm14.337.745c.093.42 0 .84-.42.888l-.7.14v10.264c-.608.327-1.168.514-1.635.514-.748 0-.935-.234-1.495-.933l-4.577-7.186v6.952L12.21 19s0 .84-1.168.84l-3.222.186c-.093-.186 0-.653.327-.746l.84-.233V9.854L7.822 9.76c-.094-.42.14-1.026.793-1.073l3.456-.233 4.764 7.279v-6.44l-1.215-.139c-.093-.514.28-.887.747-.933zM1.936 1.035l13.31-.98c1.634-.14 2.055-.047 3.082.7l4.249 2.986c.7.513.934.653.934 1.213v16.378c0 1.026-.373 1.634-1.68 1.726l-15.458.934c-.98.047-1.448-.093-1.962-.747l-3.129-4.06c-.56-.747-.793-1.306-.793-1.96V2.667c0-.839.374-1.54 1.447-1.632z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">Available</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Notion</h3>
                <p class="text-sm text-gray-600 mb-4">Sync data and create pages in Notion workspace</p>
                <div class="pt-4 border-t border-gray-200">
                  <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Connect
                  </button>
                </div>
              </div>

              <!-- Google Drive -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
                    <svg class="w-8 h-8" viewBox="0 0 24 24">
                      <path fill="#4285F4" d="M12 0L4 6.5v11L12 24l8-6.5v-11z"/>
                      <path fill="#34A853" d="M12 0l8 6.5L12 13z"/>
                      <path fill="#FBBC04" d="M4 6.5L12 13l8-6.5L12 0z"/>
                      <path fill="#EA4335" d="M4 6.5v11L12 24l8-6.5v-11L12 13z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">Available</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Google Drive</h3>
                <p class="text-sm text-gray-600 mb-4">Access and manage files in Google Drive</p>
                <div class="pt-4 border-t border-gray-200">
                  <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Connect
                  </button>
                </div>
              </div>

              <!-- Trello -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-blue-600 flex items-center justify-center">
                    <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M21.147 0H2.853C1.28 0 0 1.28 0 2.853v18.294C0 22.72 1.28 24 2.853 24h18.294C22.72 24 24 22.72 24 21.147V2.853C24 1.28 22.72 0 21.147 0zM10.34 17.287c0 .563-.46 1.023-1.023 1.023H5.996c-.563 0-1.023-.46-1.023-1.023V5.996c0-.563.46-1.023 1.023-1.023h3.321c.563 0 1.023.46 1.023 1.023v11.291zm8.683-6.658c0 .563-.46 1.023-1.023 1.023h-3.321c-.563 0-1.023-.46-1.023-1.023V5.996c0-.563.46-1.023 1.023-1.023h3.321c.563 0 1.023.46 1.023 1.023v4.633z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">Available</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Trello</h3>
                <p class="text-sm text-gray-600 mb-4">Create and manage Trello cards and boards</p>
                <div class="pt-4 border-t border-gray-200">
                  <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Connect
                  </button>
                </div>
              </div>

              <!-- Airtable -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-yellow-100 flex items-center justify-center">
                    <svg class="w-8 h-8 text-yellow-600" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M6.125 6.875L12 3.25l5.875 3.625L12 10.5 6.125 6.875zM3.25 9.125L2 9.75v4.5l1.25.625V9.125zm2.75 1.375v4.75L12 19.625l6-4.375V10.5L12 14.875 6 10.5zm12.75 4.75V10.5L22 9.875v4.75L18.75 15.25z"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">Available</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Airtable</h3>
                <p class="text-sm text-gray-600 mb-4">Sync and manage data in Airtable bases</p>
                <div class="pt-4 border-t border-gray-200">
                  <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Connect
                  </button>
                </div>
              </div>

              <!-- Custom Integration -->
              <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center">
                    <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                    </svg>
                  </div>
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">Custom</span>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Custom Webhook</h3>
                <p class="text-sm text-gray-600 mb-4">Create custom integrations using webhooks</p>
                <div class="pt-4 border-t border-gray-200">
                  <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    Configure
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
