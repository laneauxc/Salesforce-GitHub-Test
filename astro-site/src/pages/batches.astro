---
import SidebarNav from '../components/SidebarNav';

const baseUrl = import.meta.env.BASE_URL;

const navSections = [
  {
    header: 'Create',
    items: [
      { icon: 'chat', label: 'Chat', href: `${baseUrl}chat-prompts/` },
      { icon: 'agent-builder', label: 'Agent Builder', href: `${baseUrl}agent-builder/` },
      { icon: 'audio', label: 'Audio', href: `${baseUrl}audio/` },
      { icon: 'images', label: 'Images', href: `${baseUrl}images/` },
      { icon: 'videos', label: 'Videos', href: `${baseUrl}videos/` },
      { icon: 'assistants', label: 'Assistants', href: `${baseUrl}assistants/` },
    ],
  },
  {
    header: 'Manage',
    items: [
      { icon: 'usage', label: 'Usage', href: `${baseUrl}usage/` },
      { icon: 'api-keys', label: 'API keys', href: `${baseUrl}api-keys/` },
      { icon: 'apps', label: 'Apps', href: `${baseUrl}apps/` },
      { icon: 'logs', label: 'Logs', href: `${baseUrl}logs/` },
      { icon: 'storage', label: 'Storage', href: `${baseUrl}storage/` },
      { icon: 'batches', label: 'Batches', selected: true, href: `${baseUrl}batches/` },
    ],
  },
  {
    header: 'Optimize',
    items: [
      { icon: 'evaluation', label: 'Evaluation', href: `${baseUrl}evaluation/` },
      { icon: 'fine-tuning', label: 'Fine-tuning', href: `${baseUrl}fine-tuning/` },
    ],
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Batches - Manage</title>
  </head>
  <body class="bg-white">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <SidebarNav 
        client:load 
        sections={navSections}
      />

      <!-- Main content area -->
      <main class="flex-1 overflow-y-auto">
        <div class="max-w-6xl mx-auto p-8">
          <div class="flex items-center justify-between mb-8">
            <div>
              <h1 class="text-3xl font-bold text-gray-900 mb-2">Batch Operations</h1>
              <p class="text-gray-600">Process large volumes of requests asynchronously</p>
            </div>
            <button id="createBatchBtn" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors shadow-sm flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Create Batch
            </button>
          </div>

          <!-- Stats Cards -->
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-gray-600">Total Batches</span>
                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </div>
              <div class="text-3xl font-bold text-gray-900">24</div>
              <p class="text-sm text-gray-500 mt-1">All time</p>
            </div>

            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-gray-600">Running</span>
                <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div class="text-3xl font-bold text-gray-900">3</div>
              <p class="text-sm text-orange-600 mt-1">In progress</p>
            </div>

            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-gray-600">Completed</span>
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="text-3xl font-bold text-gray-900">20</div>
              <p class="text-sm text-green-600 mt-1">Successfully finished</p>
            </div>

            <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-gray-600">Failed</span>
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="text-3xl font-bold text-gray-900">1</div>
              <p class="text-sm text-red-600 mt-1">Needs attention</p>
            </div>
          </div>

          <!-- Batch List -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
            <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
              <h2 class="text-lg font-semibold text-gray-900">Recent Batches</h2>
              <select class="px-3 py-1.5 border border-gray-300 rounded-lg text-sm">
                <option>All Status</option>
                <option>Running</option>
                <option>Completed</option>
                <option>Failed</option>
                <option>Cancelled</option>
              </select>
            </div>
            <div class="divide-y divide-gray-200" id="batchList">
              <!-- Running Batch -->
              <div class="px-6 py-4 hover:bg-gray-50">
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-orange-50 flex items-center justify-center">
                      <svg class="w-6 h-6 text-orange-500 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium text-gray-900">Batch Processing #batch_28475</h3>
                      <p class="text-sm text-gray-500">Started 15 minutes ago</p>
                    </div>
                  </div>
                  <span class="px-2.5 py-1 bg-orange-100 text-orange-700 text-xs font-medium rounded-full">Running</span>
                </div>
                <div class="ml-13 space-y-2">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Progress</span>
                    <span class="text-gray-900 font-medium">750 / 1000 requests</span>
                  </div>
                  <div class="bg-gray-200 rounded-full h-2">
                    <div class="bg-orange-500 h-2 rounded-full" style="width: 75%"></div>
                  </div>
                  <div class="flex items-center gap-2 text-xs text-gray-500">
                    <span>Estimated completion: 5 minutes</span>
                  </div>
                </div>
              </div>

              <!-- Completed Batch -->
              <div class="px-6 py-4 hover:bg-gray-50">
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-green-50 flex items-center justify-center">
                      <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium text-gray-900">Image Generation Batch #batch_28474</h3>
                      <p class="text-sm text-gray-500">Completed 2 hours ago</p>
                    </div>
                  </div>
                  <span class="px-2.5 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Completed</span>
                </div>
                <div class="ml-13 space-y-2">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Total requests</span>
                    <span class="text-gray-900 font-medium">500 / 500</span>
                  </div>
                  <div class="flex items-center gap-4 text-sm">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-gray-600">Duration: 12m 34s</span>
                    </div>
                    <button class="text-blue-600 hover:text-blue-700 font-medium">Download Results</button>
                  </div>
                </div>
              </div>

              <!-- Another Running Batch -->
              <div class="px-6 py-4 hover:bg-gray-50">
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-orange-50 flex items-center justify-center">
                      <svg class="w-6 h-6 text-orange-500 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium text-gray-900">Text Analysis Batch #batch_28473</h3>
                      <p class="text-sm text-gray-500">Started 1 hour ago</p>
                    </div>
                  </div>
                  <span class="px-2.5 py-1 bg-orange-100 text-orange-700 text-xs font-medium rounded-full">Running</span>
                </div>
                <div class="ml-13 space-y-2">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Progress</span>
                    <span class="text-gray-900 font-medium">2,340 / 10,000 requests</span>
                  </div>
                  <div class="bg-gray-200 rounded-full h-2">
                    <div class="bg-orange-500 h-2 rounded-full" style="width: 23.4%"></div>
                  </div>
                  <div class="flex items-center gap-2 text-xs text-gray-500">
                    <span>Estimated completion: 3 hours 15 minutes</span>
                  </div>
                </div>
              </div>

              <!-- Failed Batch -->
              <div class="px-6 py-4 hover:bg-gray-50">
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-red-50 flex items-center justify-center">
                      <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium text-gray-900">Translation Batch #batch_28472</h3>
                      <p class="text-sm text-gray-500">Failed 3 hours ago</p>
                    </div>
                  </div>
                  <span class="px-2.5 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full">Failed</span>
                </div>
                <div class="ml-13 space-y-2">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Processed</span>
                    <span class="text-gray-900 font-medium">123 / 200 requests</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm text-red-600">Error: Rate limit exceeded</span>
                  </div>
                  <div class="flex items-center gap-2">
                    <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">Retry Batch</button>
                    <span class="text-gray-300">|</span>
                    <button class="text-sm text-gray-600 hover:text-gray-700">View Error Details</button>
                  </div>
                </div>
              </div>

              <!-- Completed Batch -->
              <div class="px-6 py-4 hover:bg-gray-50">
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-green-50 flex items-center justify-center">
                      <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium text-gray-900">Sentiment Analysis #batch_28471</h3>
                      <p class="text-sm text-gray-500">Completed yesterday</p>
                    </div>
                  </div>
                  <span class="px-2.5 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Completed</span>
                </div>
                <div class="ml-13 space-y-2">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Total requests</span>
                    <span class="text-gray-900 font-medium">5,000 / 5,000</span>
                  </div>
                  <div class="flex items-center gap-4 text-sm">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-gray-600">Duration: 1h 45m</span>
                    </div>
                    <button class="text-blue-600 hover:text-blue-700 font-medium">Download Results</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Create Batch Modal -->
    <div id="createBatchModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
      <div class="bg-white rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
          <h2 class="text-xl font-semibold text-gray-900">Create New Batch</h2>
          <button id="closeCreateBatchModal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        
        <form id="createBatchForm" class="p-6 space-y-6">
          <div>
            <label for="batchName" class="block text-sm font-medium text-gray-700 mb-2">Batch Name *</label>
            <input
              type="text"
              id="batchName"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              placeholder="e.g., Image Generation Batch"
            />
          </div>

          <div>
            <label for="batchType" class="block text-sm font-medium text-gray-700 mb-2">Operation Type *</label>
            <select
              id="batchType"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">Select operation type</option>
              <option value="image-generation">Image Generation</option>
              <option value="text-analysis">Text Analysis</option>
              <option value="translation">Translation</option>
              <option value="sentiment">Sentiment Analysis</option>
              <option value="classification">Classification</option>
              <option value="custom">Custom</option>
            </select>
          </div>

          <div>
            <label for="inputFile" class="block text-sm font-medium text-gray-700 mb-2">Input File *</label>
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-400 transition-colors cursor-pointer" id="batchFileDropZone">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
              </svg>
              <p class="text-gray-700 font-medium mb-1">Drop JSONL file here or click to browse</p>
              <p class="text-sm text-gray-500">Each line should be a JSON object</p>
            </div>
            <input type="file" id="inputFile" accept=".jsonl" class="hidden" />
          </div>

          <div>
            <label for="batchPriority" class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
            <select
              id="batchPriority"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="normal">Normal</option>
              <option value="high">High</option>
              <option value="low">Low</option>
            </select>
          </div>

          <div class="flex gap-3 pt-4 border-t border-gray-200">
            <button
              type="submit"
              class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
            >
              Create Batch
            </button>
            <button
              type="button"
              id="cancelCreateBatch"
              class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      const createBatchBtn = document.getElementById('createBatchBtn');
      const createBatchModal = document.getElementById('createBatchModal');
      const closeCreateBatchModal = document.getElementById('closeCreateBatchModal');
      const cancelCreateBatch = document.getElementById('cancelCreateBatch');
      const createBatchForm = document.getElementById('createBatchForm') as HTMLFormElement;
      const batchFileDropZone = document.getElementById('batchFileDropZone');
      const inputFile = document.getElementById('inputFile') as HTMLInputElement;

      createBatchBtn?.addEventListener('click', () => {
        createBatchModal?.classList.remove('hidden');
      });

      closeCreateBatchModal?.addEventListener('click', () => {
        createBatchModal?.classList.add('hidden');
      });

      cancelCreateBatch?.addEventListener('click', () => {
        createBatchModal?.classList.add('hidden');
      });

      batchFileDropZone?.addEventListener('click', () => {
        inputFile?.click();
      });

      inputFile?.addEventListener('change', (e) => {
        const file = (e.target as HTMLInputElement).files?.[0];
        if (file) {
          batchFileDropZone!.innerHTML = `
            <svg class="w-12 h-12 text-green-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-gray-700 font-medium mb-1">${file.name}</p>
            <p class="text-sm text-gray-500">${(file.size / 1024).toFixed(2)} KB</p>
          `;
        }
      });

      batchFileDropZone?.addEventListener('dragover', (e) => {
        e.preventDefault();
        batchFileDropZone.classList.add('border-blue-400', 'bg-blue-50');
      });

      batchFileDropZone?.addEventListener('dragleave', () => {
        batchFileDropZone.classList.remove('border-blue-400', 'bg-blue-50');
      });

      batchFileDropZone?.addEventListener('drop', (e) => {
        e.preventDefault();
        batchFileDropZone.classList.remove('border-blue-400', 'bg-blue-50');
        
        const file = e.dataTransfer?.files[0];
        if (file) {
          batchFileDropZone!.innerHTML = `
            <svg class="w-12 h-12 text-green-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-gray-700 font-medium mb-1">${file.name}</p>
            <p class="text-sm text-gray-500">${(file.size / 1024).toFixed(2)} KB</p>
          `;
        }
      });

      createBatchForm?.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const batchName = (document.getElementById('batchName') as HTMLInputElement).value;
        const batchType = (document.getElementById('batchType') as HTMLSelectElement).value;
        
        alert(`Batch "${batchName}" of type "${batchType}" has been created and queued for processing.`);
        createBatchModal?.classList.add('hidden');
        createBatchForm?.reset();
      });
    </script>
  </body>
</html>
